<!DOCTYPE html>
<html>
  <head>
    <title>PrivateEvents</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <% if flash[:notice] %>
      <p class="notice"><%= notice %></p>
    <% end %>
    <% if flash[:alert] %>
      <p class="alert"><%= alert %></p>
    <% end %>
    <nav>
      <%= link_to root_path do %>
        <h1>Event Manager</h1>
      <% end %>
      <% if user_signed_in? %>
        <p><%= link_to current_user.username, edit_user_registration_path %></p>
        <p><%= link_to "My Events", current_user %></p>
        <p><%= link_to "MY RSVP's", event_attendee_path(current_user.id) %></p>
        <p><%= link_to "Logout", destroy_user_session_path, data: { "turbo-method": :delete } %></p>
      <% else %>
        <p><%= link_to 'Sign In', new_user_session_path%></p>
				<p><%= link_to 'Sign Up', new_user_registration_path%></p>
      <% end %>
    </nav>
    

    <%= yield %>
  </body>
</html>
