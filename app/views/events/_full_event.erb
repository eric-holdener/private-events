<p>
  <strong>Event name:</strong>
  <%= @event.title %>
</p>
<p>
  <strong>Event date:</strong>
  <%= @event.event_date %>
</p>
<p>
  <strong>Event location:</strong>
  <%= @event.event_location %>
</p>

<div><br />

<div>
  <% if current_user.id == @event.creator %>
    <%= link_to "Edit this event", edit_event_path(@event) %><br />
  <% else %>
    <%= button_to "RSVP", event_attendees_path(:event_id => @event.id), method: :post %>
  <% end %>
  <%= link_to "Back to events", events_path %><br />

  <%= button_to "Destroy this event", @event, method: :delete %>
</div>

</div>
